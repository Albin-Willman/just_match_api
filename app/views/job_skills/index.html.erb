<p id="notice"><%= notice %></p>

<h1>Listing Job Skills</h1>

<table>
  <thead>
    <tr>
      <th>Job</th>
      <th>Skill</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_skills.each do |job_skill| %>
      <tr>
        <td><%= job_skill.job %></td>
        <td><%= job_skill.skill %></td>
        <td><%= link_to 'Show', job_skill %></td>
        <td><%= link_to 'Edit', edit_job_skill_path(job_skill) %></td>
        <td><%= link_to 'Destroy', job_skill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

