{
  "name": "JustMatch API",
  "description": "Match users that need small tasks performed with other users skills.",
  "repository": "https://github.com/justarrived/just_match_api",
  "keywords": [],
  "env": {
    AIRBRAKE_PROJECT_ID=''
    AIRBRAKE_API_KEY=''
    "RAILS_ENV": "production",
    "SECRET_KEY_BASE": {
      "description": "Rails secret token",
      "generator": "secret"
    },
    "S3_BUCKET_NAME": {
      "description": "AWS S3 bucket name (required for image upload)",
      "value": "",
      "required": false
    },
    "AWS_ACCESS_KEY_ID": {
      "description": "AWS access key id (required for image upload)",
      "value": "",
      "required": false
    },
    "AWS_SECRET_ACCESS_KEY": {
      "description": "AWS secret access key (required for image upload)",
      "value": "",
      "required": false
    },
    "SENDGRID_USERNAME": {
      "description": "SendGrid username (required for email)",
      "value": "",
      "required": false
    },
    "SENDGRID_PASSWORD": {
      "description": "SendGrid password (required for email)",
      "value": "",
      "required": false
    },
    "MAPBOX_ACCESS_TOKEN": {
      "description": "Access token for Mapbox used in the admins tools",
      "value": "",
      "required": false
    }
  },
  "addons": ["sendgrid:starter", "scheduler:standard", "heroku-redis:hobby-dev", "airbrake:free_heroku"],
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate db:seed"
  }
}
